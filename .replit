modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
build = ["npx", "vite", "build"]
publicDir = "dist"

[workflows]
runButton = "React Dev Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow]]
name = "React Dev Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Build App"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite build"

[[ports]]
localPort = 4173
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8501
externalPort = 3000

[agent]
expertMode = true
